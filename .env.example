TELEGRAM_BOT_TOKEN=

# Comma-separated list of Telegram User IDs allowed to use the bot.
# If empty or not set, the bot will be open to everyone.
ALLOWED_USERS=12345678,87654321

# Codex runtime mode: auto (SDK first + optional fallback), sdk, or cli.
AIPAL_CODEX_RUNTIME=auto

# In auto mode, fallback to CLI if SDK fails.
AIPAL_CODEX_SDK_FALLBACK=true

# Optional override for SDK request timeout in milliseconds.
# AIPAL_CODEX_SDK_TIMEOUT_MS=600000

# Verbose SDK runtime logs (true/false).
AIPAL_CODEX_SDK_LOG_VERBOSE=false
